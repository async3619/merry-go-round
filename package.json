{
  "name": "merry-go-round",
  "version": "0.1.0",
  "description": "a node.js module for handling media files",
  "main": "dist/commonjs/index.js",
  "module": "dist/esnext/index.js",
  "typings": "dist/esnext/index.d.ts",
  "typescript": {
    "definition": "dist/esnext/index.d.ts"
  },
  "repository": "https://github.com/async3619/merry-go-round",
  "author": "Sophia <async3619@naver.com>",
  "license": "MIT",
  "scripts": {
    "build": "node ./tools/build.js",
    "build:debug": "cross-env MERRY_GO_ROUND_BUILD_MODE=debug yarn clean && yarn build --debug",
    "compile": "tsc --project \"./tsconfig.build.json\" -m esnext --outDir dist/esnext && tsc --project \"./tsconfig.build.json\" -m commonjs --outDir dist/commonjs",
    "clean": "rimraf dist build deps",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "prepare": "yarn run snyk-protect",
    "snyk-protect": "snyk-protect"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "cmake-js": "^5.2.0",
    "cross-spawn": "^6.0.5",
    "node-addon-api": "1.7.2",
    "npm-run-path": "^3.1.0",
    "@snyk/protect": "latest"
  },
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.5",
    "@types/glob": "^7.1.1",
    "@types/listr": "^0.13.0",
    "@types/lodash.flatten": "^4.4.6",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.6",
    "@types/node-fetch": "^2.1.7",
    "@types/tar": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-unicorn": "^7.1.0",
    "filenamify": "^3.0.0",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "listr": "^0.14.3",
    "lodash.flatten": "^4.4.0",
    "mocha": "^6.0.2",
    "node-fetch": "^2.3.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "tar": "^4.4.8",
    "ts-node": "^8.0.3",
    "tslib": "^1.9.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  },
  "snyk": true
}
