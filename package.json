{
    "name": "merry-go-round",
    "version": "0.1.0",
    "description": "a node.js module for handling media files",
    "main": "dist/commonjs/index.js",
    "module": "dist/esnext/index.js",
    "typings": "dist/esnext/index.d.ts",
    "typescript": {
        "definition": "dist/esnext/index.d.ts"
    },
    "repository": "https://github.com/async3619/merry-go-round",
    "author": "Sophia <async3619@naver.com>",
    "license": "MIT",
    "scripts": {
        "autogypi": "autogypi",
        "node-gyp": "node-gyp",
        "ndts": "ndts",
        "install": "autogypi && yarn install-deps && yarn compile",
        "type-gen": "npm run -s -- ndts . > ./src/lib-types.d.ts",
        "precompile": "yarn build && yarn type-gen",
        "compile": "tsc --project \"./tsconfig.build.json\" -m esnext --outDir dist/esnext && tsc --project \"./tsconfig.build.json\" -m commonjs --outDir dist/commonjs",
        "postcompile": "cpx ./src/lib-types.d.ts ./dist/commonjs && cpx src/lib-types.d.ts dist/esnext",
        "build": "node-gyp configure build",
        "install-deps": "ts-node ./tools/install-deps",
        "clean": "rimraf dist build",
        "test": "cross-env mocha -r ts-node/register test/**/*.spec.ts",
        "predebug": "cross-env NODE_ENV=debug yarn install-deps && node-gyp configure build --debug",
        "debug": "ts-node ./debug.ts"
    },
    "dependencies": {
        "autogypi": "^0.2.2",
        "nbind": "^0.3.15",
        "node-gyp": "^3.8.0"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/fs-extra": "^5.0.5",
        "@types/listr": "^0.13.0",
        "@types/lodash.flatten": "^4.4.6",
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.11.6",
        "@types/node-fetch": "^2.1.7",
        "@types/tar": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^1.5.0",
        "@typescript-eslint/parser": "^1.5.0",
        "chai": "^4.2.0",
        "cpx": "^1.5.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.15.3",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-unicorn": "^7.1.0",
        "filenamify": "^3.0.0",
        "fs-extra": "^7.0.1",
        "listr": "^0.14.3",
        "lodash.flatten": "^4.4.0",
        "mocha": "^6.0.2",
        "node-fetch": "^2.3.0",
        "prettier": "^1.16.4",
        "rimraf": "^2.6.3",
        "tar": "^4.4.8",
        "ts-node": "^8.0.3",
        "tslib": "^1.9.3",
        "tslint": "^5.14.0",
        "typescript": "^3.3.4000"
    },
    "nativeDependencies": [
        "async3619/prebuilts/taglib",
        "async3619/prebuilts/boost-filesystem"
    ]
}
