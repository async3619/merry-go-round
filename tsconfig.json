{
    "compilerOptions": {
        "importHelpers": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es2018",
        "lib": [
            "es6",
            "esnext",
            "es2015",
            "dom"
        ],
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false
    },
    "files": [
        "src/index.ts",
        "src/lib-types.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}